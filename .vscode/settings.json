{
  "go.lintOnSave": "off",
  "gopls": {
    "ui.diagnostic.staticcheck": true,
    "ui.diagnostic.analyses": {
      "unusedparams": true,
      "shadow": true,
      "unusedwrite": true,
      "useany": true,
      "unusedvariable": true
    }
  },
  "go.formatTool": "goimports",
  "editor.formatOnSave": true,
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  }
}